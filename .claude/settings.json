{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/check_mvp_complete.py",
            "timeout": 60000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/log_progress.py",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
